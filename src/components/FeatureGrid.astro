---
const features = [
  {
    title: "Prioritised corrective actions",
    description: "Reconciliation tells you whatâ€™s wrong. RegParity shows what to correct next.",
    icon: "bolt"
  },
  {
    title: "Full audit trail",
    description: "Every correction is traceable. Clear provenance from break to outbound update.",
    icon: "shield"
  },
  {
    title: "Designed for real trade volumes",
    description: "Built to handle large position files and repeatable workflows.",
    icon: "server"
  },
];
---
<section class="features">
  <div class="container features-container">
    {features.map(feature => (
      <div class="feature-card">
        <div class="feature-icon">
          {feature.icon === 'bolt' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path></svg>
          )}
          {feature.icon === 'shield' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
          )}
          {feature.icon === 'server' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></svg>
          )}
        </div>
        <h3>{feature.title}</h3>
        <p>{feature.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .features {
    padding: 6rem 0;
    border-bottom: 1px solid var(--color-border);
    background-color: #fafafa;
  }
  .features-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .features-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  .feature-card {
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 2rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -5px rgba(0,0,0,0.05);
  }
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    color: #333;
  }
  .feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-weight: 700;
  }
  .feature-card p {
    color: #666;
    line-height: 1.6;
    font-size: 1rem;
    margin-bottom: 0;
  }
</style>
