<header>
  <div class="container header-container">
    <a href="/" class="logo">
      <img src="/brand/png/logo-horizontal-gradient.png" alt="RegParity" height="32" />
    </a>
    <nav>
      <a href="/product">Product</a>
      <a href="/download">Download</a>
      <a href="/contact">Contact</a>
    </nav>
  </div>
</header>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
    background: var(--color-bg);
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo img {
    height: 32px;
    width: auto;
  }
  nav {
    display: flex;
    gap: 2rem;
  }
  @media (max-width: 600px) {
    .header-container {
      flex-direction: column;
      gap: 1rem;
    }
    nav {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
  nav a {
    font-weight: 500;
    color: var(--color-primary);
  }
</style>
