---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact RegParity">
  <div class="container contact-page">
    <h1>Contact Us</h1>
    <p class="response-time">We respond within one business day.</p>

    <div class="contact-details">
      <p>Direct email: <a href="mailto:hello@regparity.com">hello@regparity.com</a></p>
    </div>

    <!-- TODO: Replace __FORM_ENDPOINT__ with Formspree/Getform endpoint -->
    <form action="__FORM_ENDPOINT__" method="POST" class="contact-form">
      <div class="form-group">
        <label for="name">Name *</label>
        <input type="text" id="name" name="name" required />
      </div>

      <div class="form-group">
        <label for="email">Work Email *</label>
        <input type="email" id="email" name="email" required />
      </div>

      <div class="form-group">
        <label for="message">Message *</label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>

      <button type="submit" class="btn">Send Message</button>
    </form>
  </div>
</BaseLayout>

<style>
  .contact-page {
    padding: 4rem 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .response-time {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    color: #444;
  }
  .contact-details {
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }
  .contact-details a {
    text-decoration: underline;
    color: var(--color-primary);
  }
  .contact-form {
    background: #fafafa;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  input, textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
    font-family: inherit;
  }
  button {
    width: 100%;
    font-size: 1.125rem;
  }
</style>
