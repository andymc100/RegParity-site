---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact RegParity">
  <div class="wrap page-content">
    <div class="form-container">
      <h1>Get in touch</h1>
      <p>For product questions, licensing, or a short walkthrough, email us.</p>

      <a href="mailto:hello@regparity.com?subject=RegParity%20enquiry" class="btn primary full-width">Email hello@regparity.com</a>

      <p class="footer-note">We typically respond within one business day.</p>
    </div>
  </div>
</BaseLayout>

<style>
  .page-content {
    padding: 80px 22px;
    display: flex;
    justify-content: center;
  }
  .form-container {
    width: 100%;
    max-width: 520px;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 16px;
    color: var(--rpText);
  }
  p {
    color: var(--rpTextMuted);
    margin-bottom: 32px;
    line-height: 1.6;
  }
  .full-width {
    width: 100%;
    margin-bottom: 32px;
    text-align: center;
  }
  .footer-note {
    font-size: 0.9rem;
    color: var(--rpTextMuted);
    opacity: 0.8;
    margin-top: 32px;
    text-align: center;
  }
</style>
