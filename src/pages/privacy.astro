---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Privacy Policy | RegParity">
  <div class="wrap page-content">
    <div class="content-container">
      <h1>Privacy Policy</h1>

      <section>
        <h2>Information Collection</h2>
        <p>We collect contact information (name, company, email) submitted via our forms.</p>
      </section>

      <section>
        <h2>Usage</h2>
        <p>This information is used only to respond to your enquiries and provide the requested download links.</p>
      </section>

      <section>
        <h2>Data Sharing</h2>
        <p>Your information is not shared with third parties.</p>
      </section>

      <section>
        <h2>Data Retention</h2>
        <p>We retain your data for the minimum amount of time necessary to fulfill the purpose of your interaction.</p>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .page-content {
    padding: 80px 22px;
    display: flex;
    justify-content: center;
  }
  .content-container {
    width: 100%;
    max-width: 720px;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 32px;
    color: var(--rpText);
  }
  h2 {
    font-size: 1.25rem;
    margin-bottom: 12px;
    margin-top: 32px;
    color: var(--rpText);
    border-bottom: 1px solid var(--rpBorder);
    padding-bottom: 8px;
  }
  p {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--rpTextMuted);
  }
</style>
